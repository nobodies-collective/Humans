@model Profiles.Web.Models.ApplicationIndexViewModel
@{
    ViewData["Title"] = "Governance";
}

<h1 class="mb-4">Governance</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        @if (Model.Applications.Count == 0)
        {
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Not Yet Applied</h5>
                    <p class="card-text text-muted">
                        Asociados are the formal voting members of Nobodies Collective. As an asociado,
                        you can attend general assemblies, vote on collective decisions, and participate in elections.
                    </p>
                    <p class="card-text text-muted">
                        <strong>This is optional.</strong> Most volunteers don't need to become asociados.
                        You already have access to resources once you've completed your profile and consents.
                    </p>
                    <a asp-action="Create" class="btn btn-outline-primary">Apply to Become an Asociado</a>
                </div>
            </div>
        }
        else
        {
            var app = Model.Applications.First();
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span>Your Application</span>
                    <span class="badge @app.StatusBadgeClass">@app.Status</span>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3">Submitted</dt>
                        <dd class="col-sm-9">@app.SubmittedAt.ToString("d MMMM yyyy")</dd>

                        @if (app.ResolvedAt.HasValue)
                        {
                            <dt class="col-sm-3">Resolved</dt>
                            <dd class="col-sm-9">@app.ResolvedAt.Value.ToString("d MMMM yyyy")</dd>
                        }
                    </dl>

                    @if (app.Status == "Submitted" || app.Status == "UnderReview")
                    {
                        <hr />
                        <p class="text-muted mb-0">Your application is being reviewed. We'll notify you by email once a decision is made.</p>
                    }
                    else if (app.Status == "Approved")
                    {
                        <hr />
                        <p class="text-success mb-0">Welcome! You are now an asociado of Nobodies Collective.</p>
                    }
                    else if (app.Status == "Rejected")
                    {
                        <hr />
                        <p class="text-muted mb-0">Your application was not approved. If you have questions, please contact the board.</p>
                    }
                </div>
            </div>
        }
    </div>

    <div class="col-md-4">
        <div class="card mb-3">
            <div class="card-header">What is an Asociado?</div>
            <div class="card-body">
                <p class="mb-2">Asociados are the formal voting members of the association under Spanish law.</p>
                <p class="mb-2"><strong>As an asociado you can:</strong></p>
                <ul class="mb-0">
                    <li>Attend general assemblies</li>
                    <li>Vote on collective decisions</li>
                    <li>Participate in board elections</li>
                </ul>
            </div>
        </div>
        <div class="card">
            <div class="card-header">Who Should Apply?</div>
            <div class="card-body">
                <p class="mb-2">Governance membership is intended for volunteers in leadership roles:</p>
                <ul class="mb-2">
                    <li>Camp leads and coordinators</li>
                    <li>Meta volunteers and team leads</li>
                    <li>Long-term committed community members</li>
                </ul>
                <p class="mb-2 text-muted"><small>The board reviews applications based on community involvement and alignment with the collective's mission.</small></p>
                <p class="mb-0 text-muted"><small><strong>Note:</strong> You don't need to be an asociado to access resources or participate in events.</small></p>
            </div>
        </div>
    </div>
</div>
