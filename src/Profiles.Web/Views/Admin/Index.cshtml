@model Profiles.Web.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = Localizer["AdminDashboard_Title"].Value;
}

<h1>@Localizer["AdminDashboard_Title"]</h1>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h2 class="card-title mb-0">@Model.TotalMembers</h2>
                <p class="card-text text-muted">@Localizer["Admin_TotalMembers"]</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h2 class="card-title mb-0 text-success">@Model.ActiveMembers</h2>
                <p class="card-text text-muted">@Localizer["Admin_ActiveMembers"]</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center @(Model.PendingVolunteers > 0 ? "border-warning" : "")">
            <div class="card-body">
                <h2 class="card-title mb-0 text-warning">@Model.PendingVolunteers</h2>
                <p class="card-text text-muted">@Localizer["Admin_PendingVolunteers"]</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h2 class="card-title mb-0 text-warning">@Model.PendingApplications</h2>
                <p class="card-text text-muted">@Localizer["Admin_PendingApplications"]</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>@Localizer["Admin_QuickActions"]</span>
            </div>
            <div class="list-group list-group-flush">
                <a asp-action="Members" asp-route-filter="pending" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    @Localizer["Admin_ReviewPendingVolunteers"]
                    @if (Model.PendingVolunteers > 0)
                    {
                        <span class="badge bg-warning">@Model.PendingVolunteers</span>
                    }
                </a>
                <a asp-action="Applications" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    @Localizer["Admin_ReviewApplications"]
                    @if (Model.PendingApplications > 0)
                    {
                        <span class="badge bg-warning">@Model.PendingApplications</span>
                    }
                </a>
                <a asp-action="Members" class="list-group-item list-group-item-action">
                    @Localizer["Admin_ManageMembers"]
                </a>
                <a asp-action="Teams" class="list-group-item list-group-item-action">
                    @Localizer["Admin_ManageTeams"]
                </a>
                <a asp-action="Roles" class="list-group-item list-group-item-action">
                    @Localizer["Admin_ManageRoles"]
                </a>
                <a asp-action="GoogleSync" class="list-group-item list-group-item-action">
                    @Localizer["Admin_GoogleSyncStatus"]
                </a>
                <a asp-controller="Hangfire" asp-action="Index" class="list-group-item list-group-item-action">
                    @Localizer["Admin_BackgroundJobs"]
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">@Localizer["Admin_SystemHealth"]</div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    <li class="mb-2">
                        <span class="badge bg-success me-2">OK</span>
                        @Localizer["Admin_DatabaseConnection"]
                    </li>
                    <li class="mb-2">
                        <span class="badge bg-success me-2">OK</span>
                        @Localizer["Admin_BackgroundJobs"]
                    </li>
                    <li>
                        <a href="/health/ready" target="_blank">@Localizer["Admin_ViewHealthCheck"]</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
