@model Humans.Web.Models.LegalDocumentEditViewModel
@{
    ViewData["Title"] = $"Edit: {Model.Name}";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Admin</a></li>
        <li class="breadcrumb-item"><a asp-action="LegalDocuments">Legal Documents</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
    </ol>
</nav>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">Edit Legal Document</h4>
            </div>
            <div class="card-body">
                <form asp-action="EditLegalDocument" asp-route-id="@Model.Id" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Document Name</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TeamId" class="form-label">Team</label>
                        <select asp-for="TeamId" class="form-select">
                            @foreach (var team in Model.Teams)
                            {
                                <option value="@team.Id">@team.Name</option>
                            }
                        </select>
                        <div class="form-text">Documents scoped to "Volunteers" apply to all active members.</div>
                        <span asp-validation-for="TeamId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="GitHubFolderPath" class="form-label">GitHub Folder Path</label>
                        <input asp-for="GitHubFolderPath" class="form-control" placeholder="e.g. privacy/" />
                        <div class="form-text">Folder in the legal repo. Sync discovers translations by convention.</div>
                        <span asp-validation-for="GitHubFolderPath" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="GracePeriodDays" class="form-label">Grace Period (days)</label>
                        <input asp-for="GracePeriodDays" type="number" class="form-control" min="1" max="365" />
                        <span asp-validation-for="GracePeriodDays" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="IsRequired" type="checkbox" class="form-check-input" />
                        <label asp-for="IsRequired" class="form-check-label">Required for membership</label>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="IsActive" type="checkbox" class="form-check-input" />
                        <label asp-for="IsActive" class="form-check-label">Active</label>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                        <a asp-action="LegalDocuments" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card mb-3">
            <div class="card-header">Document Info</div>
            <div class="card-body">
                <dl class="mb-0">
                    <dt>Current Version</dt>
                    <dd>@(Model.CurrentVersion ?? "No versions")</dd>
                    <dt>Total Versions</dt>
                    <dd>@Model.VersionCount</dd>
                    <dt>Last Synced</dt>
                    <dd>@(Model.LastSyncedAt?.ToString("d MMM yyyy HH:mm") ?? "Never")</dd>
                </dl>
            </div>
        </div>

        <div class="card">
            <div class="card-header">GitHub Sync</div>
            <div class="card-body">
                <p class="small text-muted">Trigger a manual sync from the GitHub repository to fetch the latest content.</p>
                <form asp-action="SyncLegalDocument" asp-route-id="@Model.Id" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-primary btn-sm w-100">Sync Now</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
